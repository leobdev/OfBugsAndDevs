<div class="overlay fullscreen-fixed"></div>
<div class="loader-wrapper fullscreen-fixed d-flex justify-content-center align-items-center">
    <label class="text-center">@LoaderText</label>
    <Spinner Color="SpinnerColor.Warning" />
</div>

<style type="text/css">
    .fullscreen-fixed {
        position: fixed;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
    }

    .overlay{
        background-color: white;
        opacity: 0.5;
        z-index: 1050;
    }

    .loader-wrapper{
        z-index: 1051;
    }
</style>

@code {
    [Parameter]
    public string LoaderText { get; set; } = "loading...";

}
