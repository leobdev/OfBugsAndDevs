<div class="p-3 d-flex justify-content-between">
    <h1>@Title</h1>
    <div class="actions-btns d-flex align-items-center">
        @ActionButtons
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public string Title { get; set; } = string.Empty;
    [Parameter]
    public RenderFragment? ActionButtons {get; set;}
}
